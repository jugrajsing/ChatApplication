<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteYourProfile"
    android:background="@color/color_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/app_buzz_logo"
                android:backgroundTint="@color/tab_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                <ImageView
                                    android:id="@+id/user_logo_1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@mipmap/ic_user"
                                    android:backgroundTint="@color/tab_black" />


                                <EditText
                                    android:id="@+id/et_user_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_toRightOf="@+id/user_logo_1"
                                    android:background="@null"
                                    android:ems="10"
                                    android:hint="Name"
                                    android:maxLength="16"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp">

                                </EditText>

                                <View

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/et_user_name"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/light_pink_col" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                <ImageView
                                    android:id="@+id/user_logo_2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@mipmap/ic_birthday"
                                    android:backgroundTint="@color/tab_black" />


                                <TextView
                                    android:id="@+id/date_of_birth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_toRightOf="@+id/user_logo_2"
                                    android:background="@null"
                                    android:ems="10"
                                    android:hint="Date of Birth"
                                    android:maxLength="16"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp">

                                </TextView>

                                <View

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/date_of_birth"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/light_pink_col" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/relative_sex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout

                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                <ImageView
                                    android:id="@+id/user_logo_3"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@mipmap/ic_gender"
                                    android:backgroundTint="@color/tab_black" />


                                <TextView
                                    android:id="@+id/current_user_id3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/user_logo_3"
                                    android:background="@null"
                                    android:maxLength="16"
                                    android:singleLine="true"
                                    android:text="Gender"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp">

                                </TextView>

                                <RadioGroup

                                    android:id="@+id/radioGrp_sex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"

                                    >

                                    <RadioButton

                                        android:id="@+id/radioM"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:checked="true"
                                        android:text="Male  "
                                        android:textSize="13dp" />

                                    <RadioButton

                                        android:id="@+id/radioF"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="false"
                                        android:text="Female "
                                        android:textSize="13dp" />
                                </RadioGroup>
                            </RelativeLayout>


                        </LinearLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/relative_sex"
                            android:layout_centerHorizontal="true"
                            android:background="@color/light_pink_col" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <RelativeLayout

                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                    <ImageView
                                        android:id="@+id/iv_ms"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:background="@mipmap/ic_status"
                                        android:backgroundTint="@color/tab_black" />


                                    <TextView
                                        android:id="@+id/et_ms"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="30dp"
                                        android:layout_toRightOf="@+id/iv_ms"
                                        android:background="@null"
                                        android:maxLength="16"
                                        android:singleLine="true"
                                        android:text="Marital status"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:textSize="14sp">

                                    </TextView>


                                    <RadioGroup
                                        android:id="@+id/radioGrp_marital"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:orientation="horizontal"

                                        >

                                        <RadioButton
                                            android:id="@+id/radio_Single"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left"
                                            android:checked="true"
                                            android:text="Single"
                                            android:textSize="13dp" />

                                        <RadioButton
                                            android:id="@+id/radio_married"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="false"
                                            android:text="Married"
                                            android:textSize="13dp" />
                                    </RadioGroup>


                                    <!--<Spinner
                                        android:id="@+id/spinner_marital_status"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/et_ms"
                                        android:hint="Manufacturers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:background="@drawable/textviewborder"
                                        android:padding="10dp"
                                        />-->


                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/anniversary_relative"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">


                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_gravity="center"
                                            android:background="@mipmap/ic_anniversary"
                                            android:backgroundTint="@color/tab_black"
                                            android:textColor="@color/color_white" />


                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginLeft="5dp"
                                            android:backgroundTint="@color/tab_black"
                                            android:text="Anniversary"
                                            android:textColor="@color/tab_black" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true">


                                        <EditText
                                            android:id="@+id/et_anniversary"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@null"
                                            android:editable="false"
                                            android:text="01-10-1992"
                                            android:textColor="@color/tab_black"
                                            android:textSize="14dp" />


                                        <ImageView
                                            android:id="@+id/date_anniversary"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@mipmap/ic_calender" />
                                    </LinearLayout>

                                </RelativeLayout>

                                <View

                                    android:id="@+id/view_anni"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/anniversary_relative"
                                    android:layout_centerHorizontal="true"
                                    android:background="@color/light_pink_col" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                <ImageView
                                    android:id="@+id/iv_work_on"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@mipmap/ic_work_for"
                                    android:backgroundTint="@color/tab_black" />


                                <EditText
                                    android:id="@+id/et_work_for"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_toRightOf="@+id/iv_work_on"
                                    android:background="@null"
                                    android:ems="10"
                                    android:hint="Work On"
                                    android:maxLength="16"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp">


                                </EditText>


                                <View

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/et_work_for"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/light_pink_col" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                <ImageView
                                    android:id="@+id/iv_resident"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@mipmap/ic_residence"
                                    android:backgroundTint="@color/tab_black" />


                                <EditText
                                    android:id="@+id/et_resident"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_toRightOf="@+id/iv_resident"
                                    android:background="@null"
                                    android:ems="10"
                                    android:hint="Resident"
                                    android:maxLength="16"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp">


                                </EditText>


                                <View

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/et_resident"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/light_pink_col" />

                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/iv_Interest"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:background="@mipmap/ic_interest"
                                        android:backgroundTint="@color/tab_black" />


                                    <TextView
                                        android:id="@+id/et_Interest"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toRightOf="@+id/iv_Interest"
                                        android:background="@null"
                                        android:maxLength="16"
                                        android:singleLine="true"
                                        android:text="Interest "
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp">


                                    </TextView>

                                </LinearLayout>


                                <LinearLayout

                                    android:id="@+id/LL_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <Spinner
                                            android:id="@+id/spinner_interest_one"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_weight="1"
                                            android:textAlignment="center" />

                                        <Spinner
                                            android:id="@+id/spinner_interest_two"
                                            android:layout_width="match_parent"

                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="2dp"
                                            android:layout_weight="1"
                                            android:textAlignment="center"

                                            />

                                        <Spinner
                                            android:id="@+id/spinner_interest_three"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="2dp"
                                            android:layout_weight="1"
                                            android:textAlignment="center"

                                            />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">


                                        <android.support.v7.widget.AppCompatSpinner
                                            android:id="@+id/spinner_interest_four"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="1"
                                            android:textAlignment="center"

                                            />

                                        <android.support.v7.widget.AppCompatSpinner
                                            android:id="@+id/spinner_interest_five"

                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="2dp"
                                            android:layout_weight="1"
                                            android:textAlignment="center"

                                            />

                                        <Spinner
                                            android:id="@+id/spinner_interest_six"

                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="2dp"
                                            android:layout_weight="1"
                                            android:textAlignment="center"

                                            />

                                    </LinearLayout>

                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/LL_spinner"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/light_pink_col" />

                            </LinearLayout>
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/liner_security_code_hide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity">


                                <ImageView
                                    android:id="@+id/iv_Security_code"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@mipmap/ic_terms"
                                    android:backgroundTint="@color/tab_black" />


                                <TextView
                                    android:id="@+id/et_Security_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/iv_Security_code"
                                    android:background="@null"
                                    android:hint="Security Code "
                                    android:maxLength="16"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp"></TextView>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true">


                                    <Spinner
                                        android:id="@+id/alphabets_spinner"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:hint="Manufacturers"
                                        android:textAlignment="center"


                                        />

                                    <Spinner
                                        android:id="@+id/number_spinner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:textAlignment="center"

                                        >

                                    </Spinner>

                                </LinearLayout>

                                <!--
                                <EditText
                                    android:id="@+id/numeric_code"
                                    android:singleLine="true"
                                    android:layout_toRightOf="@+id/alphabets_spinner"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:maxLength="3"
                                    android:inputType="number"
                                    android:layout_centerVertical="truere"
                                    android:textSize="16sp"
                                    android:textColorHint="@android:color/black"
                                    android:background="@null"
                                    android:hint="Numeric Code">
                                </EditText>-->


                                <View

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/et_Security_code"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/light_pink_col" />

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>


                </ScrollView>


                <Button

                    android:id="@+id/send_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/signin_shape"
                    android:text="Submitt"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>