<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_voilet"
    tools:context=".ChangePasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_application_logo"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:textSize="25dp"
                    android:id="@+id/Sign_in_SignUp_text"
                    android:textColor="@android:color/white"
                    android:text="Change Password "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="25dp"
                android:visibility="visible"
                android:id="@+id/user_login_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/lock_view1"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_secure"
                            android:layout_width="25dp"
                            android:layout_height="20dp" />

                        <EditText
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/lock_view1"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="30dp"
                            android:id="@+id/current_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:maxLength="16"
                            android:textSize="12sp"
                            android:inputType="textPassword"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Current Password">

                        </EditText>

                        <ImageView
                            android:id="@+id/hide_password"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/ic_view_password"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_pink_col"
                            android:layout_below="@+id/current_password"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/lock_view2"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_secure"
                            android:layout_width="25dp"
                            android:layout_height="20dp" />

                        <EditText
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/lock_view2"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="30dp"
                            android:id="@+id/new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:maxLength="16"
                            android:textSize="12sp"
                            android:inputType="textPassword"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="New Password">

                        </EditText>

                        <ImageView
                            android:id="@+id/hide_new_password"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/ic_view_password"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_pink_col"
                            android:layout_below="@+id/new_password"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/lock_view3"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_secure"
                            android:layout_width="25dp"
                            android:layout_height="20dp" />

                        <EditText
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/lock_view3"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="30dp"
                            android:id="@+id/confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:maxLength="16"
                            android:textSize="12sp"
                            android:inputType="textPassword"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Confirm Password">

                        </EditText>

                        <ImageView
                            android:id="@+id/hide_password_confirm"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/ic_view_password"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_pink_col"
                            android:layout_below="@+id/confirm_password"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            />

                    </RelativeLayout>
                </LinearLayout>






                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/update_password"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/signin_shape"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:paddingLeft="20dp"
                        android:minHeight="35dp"
                        android:textSize="12dp"
                        android:paddingRight="20dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Password Update" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/user_registration_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/user_logo_"
                            android:layout_marginLeft="3dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_user"
                            android:layout_width="18dp"
                            android:layout_height="20dp"  />


                        <EditText
                            android:id="@+id/secret_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@+id/user_logo_"
                            android:background="@null"
                            android:ems="10"
                            android:maxLength="16"
                            android:singleLine="true"
                            android:hint="Secret ID"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="12sp">

                        </EditText>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/secret_id"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_pink_col" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/phone_iv"
                            android:layout_width="20dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:background="@mipmap/ic_phone" />

                        <TextView
                            android:id="@+id/tv_std_code"
                            android:layout_toRightOf="@+id/phone_iv"
                            android:text="+44"
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/color_white"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_std_code"
                            android:layout_marginRight="30dp"
                            android:id="@+id/user_mobile"
                            android:layout_marginLeft="15dp"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="16"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Mobile no">


                        </EditText>

                        <!--  <ImageView
                              android:id="@+id/country_code_list"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"
                              android:background="@drawable/down"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />-->
                        <!--

                                                <Spinner
                                                    android:layout_centerVertical="true"
                                                    android:id="@+id/spinnerDropDown"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                        -->

                        <View

                            android:id="@+id/UnderLine"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/user_mobile"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_pink_col" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <TextView
                            android:id="@+id/text_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="@string/at"
                            android:textColor="@color/color_white"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <EditText
                            android:layout_toRightOf="@+id/text_at"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:id="@+id/user_email"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"

                            android:singleLine="true"
                            android:textSize="12sp"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Email address">

                        </EditText>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/user_email"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_pink_col" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/lock_view"
                            android:background="@mipmap/ic_secure"
                            android:layout_width="25dp"
                            android:layout_centerVertical="true"
                            android:layout_height="20dp" />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/lock_view"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="30dp"
                            android:id="@+id/user_passkey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:ems="10"
                            android:maxLength="16"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:inputType="textPassword"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Passkey">

                        </EditText>

                        <ImageView
                            android:id="@+id/iv_view_passkey"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/ic_view_password"
                            android:layout_width="20dp"
                            android:layout_centerVertical="true"
                            android:layout_height="20dp" />

                        <View


                            android:id="@+id/UnderLine1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/user_passkey"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_pink_col" />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginLeft="30dp"
                        android:minHeight="30dp"
                        android:background="@drawable/signin_shape"
                        android:textAllCaps="false"
                        android:layout_centerVertical="true"
                        android:id="@+id/button_SignUp_regiter"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up" />

                </RelativeLayout>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    android:text="By Signing up, you are Agreeing to Buzz app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_priv_pol"
                            android:textSize="12sp"
                            android:textColor="@color/color_white"
                            android:text="Privacy policies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/color_white" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"

                        android:text="or"
                        android:textColor="@color/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_terms_and_cond"
                            android:textSize="12sp"
                            android:textColor="@color/color_white"
                            android:text="@string/terms_and_conditiions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/color_white" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>