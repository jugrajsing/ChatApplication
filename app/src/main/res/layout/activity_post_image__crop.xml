<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".PostImage_CropActivity">


    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/CropImage_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cropFixAspectRatio="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/signin_shape"
            android:onClick="onLoadImageClick"
            android:text="Choose or Capture Image"
            android:textColor="@color/color_white"
            android:textSize="10dp"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/signin_shape"
            android:onClick="onCropImageClick"
            android:text="SAVE"
            android:textColor="@color/color_white"
            android:textSize="10dp"

            />


    </LinearLayout>


    <ImageView
        android:id="@+id/croped_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>