<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:background="@drawable/app_buzz_logo"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="16dp"

                android:textStyle="bold"
                android:text="Fingerprint Sign in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_below="@+id/secret_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#fe8080" />


            <TextView

                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:text="Link your fingerprint for secure and fast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView


                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:text="Sign in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/fingerprint_image"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:text="Place your finger over the Sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


                <Button
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:minHeight="30dp"
                    android:background="@drawable/signin_shape"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:id="@+id/button_SignUp"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register/Change Fingerprint" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"

                android:textSize="10dp"
                android:textColor="@color/color_white"
                android:text="For first time, Sign in With Secret id to activate this feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </LinearLayout>
    </ScrollView>


</RelativeLayout>