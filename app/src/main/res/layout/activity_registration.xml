<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:background="@drawable/app_buzz_logo"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:text="@string/signInText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout

                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/toggle_bacground_shape"
                android:layout_width="300dp"
                android:layout_height="35dp">

                <LinearLayout

                    android:background="@drawable/toggle_bacground_shape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/button_sign_in"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/signin_button_voilet"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sign in" />

                    <Button

                        android:layout_weight="1"
                        android:background="@drawable/signin_button"
                        android:textAllCaps="false"

                        android:layout_centerVertical="true"
                        android:id="@+id/sign_up_button"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sign up" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/user_registration_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/user_logo_"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/user_id_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:layout_toRightOf="@+id/user_logo_"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:id="@+id/secret_id"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:ems="10"
                            android:textSize="16sp"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Secret ID">

                        </EditText>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/secret_id"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="#fe8080" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/phone_iv"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_phone"
                            android:layout_width="20dp"
                            android:layout_height="25dp" />

                        <TextView
                            android:id="@+id/tv_std_code"
                            android:layout_toRightOf="@+id/phone_iv"
                            android:text="+91"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/color_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:layout_toRightOf="@+id/tv_std_code"
                            android:layout_marginRight="30dp"
                            android:id="@+id/user_mobile"
                            android:layout_marginLeft="15dp"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:textSize="16sp"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Mobile no">

                        </EditText>

                        <View

                            android:id="@+id/UnderLine"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/user_mobile"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="#fe8080" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <TextView
                            android:id="@+id/text_at"
                            android:layout_marginLeft="3dp"
                            android:text="@string/at"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:layout_toRightOf="@+id/text_at"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:id="@+id/user_email"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:textSize="16sp"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Email address">

                        </EditText>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/user_email"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="#fe8080" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:context="com.android_examples.com.edittextunderlinecolorchange.MainActivity" >


                        <ImageView
                            android:id="@+id/lock_view"
                            android:background="@drawable/lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/lock_view"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="30dp"
                            android:id="@+id/user_passkey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:ems="10"
                            android:textSize="16sp"
                            android:inputType="textPassword"
                            android:textColorHint="@android:color/white"
                            android:background="@null"
                            android:hint="Passkey">

                        </EditText>

                        <ImageView

                            android:layout_alignParentRight="true"
                            android:background="@drawable/view_eye"
                            android:layout_width="30dp"
                            android:layout_height="28dp" />

                        <View


                            android:id="@+id/UnderLine1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/user_passkey"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="#fe8080" />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginLeft="30dp"
                        android:minHeight="30dp"
                        android:background="@drawable/signin_shape"
                        android:textAllCaps="false"
                        android:layout_centerVertical="true"
                        android:id="@+id/button_SignUp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="30dp"
                    android:textColor="@color/color_white"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="35dp"
                    android:textSize="10sp"
                    android:text="@string/sign_uptext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>